<body>
    <div class="userRow">
        <h1 id="otherPlayerDeck">Other Player's Deck</h1>
        <div id="otherScrollDeck">
            <button type="button" id="otherScrollLeft"> &lt; </button>
            <button type="button" id="otherScrollRight"> &gt; </button>
            <div id="otherCardSlots"></div>
        </div>

        <div id="stageArea">
            <div id="otherPlayerTitle"><h2>Other Player's Stage Area</h2></div>
            <div class="otherTopStageText">Click Card To Stage It Here</div>
            <div class="otherBottomStageText">Click Card To Stage It Here</div>
