        <div class="topStageText">Click Card To Stage It Here</div>
        <div id="otherStageArea"></div>
        <div class="bottomStageText">Click Card To Stage It Here</div>
        
        <button type="button" id="otherStartTradeButton"> START<br>TRADE</button>
        <div id="otherScrollDeck">
            <button type="button" id="otherScrollLeft"> &lt; </button>
            <button type="button" id="otherScrollRight"> &gt; </button>
            <div id="otherCardSlots"></div>
        </div>
    </div>

