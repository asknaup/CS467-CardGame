<body>
    <div class="rowZero">
        <div class="topStageText">Click Card To Stage It Here</div>
        <div id="stageAreaZero"></div>
        <div class="bottomStageText">Click Card To Stage It Here</div>

        <button type="button" id="startTradeButton"> START<br>TRADE</button>
        <div id="scrollDeck">
            <button type="button" id="scrollLeft"> &lt; </button>
            <button type="button" id="scrollRight"> &gt; </button>
            <div id="cardSlots"></div>
        </div>
    </div>

    <div id="screenSeparator"><h1>OTHER PLAYER'S SCREEN</h1></div>
