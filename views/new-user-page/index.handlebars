<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <link rel="stylesheet" href="../global.css" />
  <link rel="stylesheet" href="style.css" />
</head>

<body>
    <div class="desktop-a">
        <div class="overlap-a">
          <div class="group-a">
            <div class="overlap-group-a"></div>
            <div class="top-bar"></div>
          </div>
          <p class="application-title">Online Trading Card Game Maker</p>
          <img class="play-button" src="img/rectangle-6.png" />
          <img class="trade-button" src="img/rectangle-6.png" />
          <img class="make-button" src="img/rectangle-5.png" />
          <img class="collect-button" src="img/rectangle-6.png" />
          <div class="play-button-text">Play</div>
          <div class="trade-button-text">Trade</div>
          <div class="make-button-text">Make</div>
          <div class="collect-button-text">Collect</div>
          <img class="user-logo" src="img/group-2.png" />

          </div> <!-- class="overlap-a" -->
    </div> <!-- class="desktop-a" -->
    
  <div class="new-user-page">
      <h1 class="new-user-title">
            Welcome New User!
        </h1>
       <div class="new-user-div">
          <form class="new-user-form" method="POST" action="">
            <div class="text-wrapper-2">
                <label class="label-new-username" for="input-new-username">
                   Username
                  <input type="text" name="input-new-username" id="input-new-username">
                </label>
            </div>
            <div class="text-wrapper-3">
                <label class="label-new-password" for="input-new-password">
                   New Password
                  <input type="text" name="input-new-password" id="input-new-password">
                </label>
            </div>
            <div class="text-wrapper-4">
                <label class="label-repeat-password" for="repeat-new-password"> 
                  Repeat New Password
                  <input type="text" name="input-repeat-password" id="input-repeat-password">
                </label>
            </div>
            <div class="text-wrapper-5">
                <label class="label-email" for="input-email">
                   Enter Email
                  <input type="text" name="input-email" id="input-email">
                </label>
            </div>
          </form>
      </div> <!-- class="reset-password-div" -->

  </div>  <!-- class="new-user-page -->

</body>

</html>