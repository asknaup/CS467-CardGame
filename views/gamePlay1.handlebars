<!-- game.html -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Card Game</title>
    <link rel="stylesheet" href="/gamePlay1.css">
    <link rel="stylesheet" href="/global.css">
</head>

<body>
    <h1>Card Game</h1>
    <!-- Health Orbs -->
    <div class="opponent-container">

        <div class="health-orb opponent-health">
            <span id="opponentHealth">100</span> <!-- Placeholder for opponent health -->
        </div>
    </div>
    <br>
    <br>
    <div id="board-container">
        <div id="board" class="board">
            <div id="opponentStagingArea" class="opponent">
                <div id="oCard1" class="drop-zone">
                    <p>Computer Slot 1</p>
                </div>
                <div id="oCard2" class="drop-zone">
                    <p>Computer Slot 2</p>
                </div>
                <div id="oCard3" class="drop-zone">
                    <p>Computer Slot 3</p>
                </div>
                <div id="oCard4" class="drop-zone">
                    <p>Computer Slot 4</p>
                </div>
                <div id="oCard5" class="drop-zone">
                    <p>Computer Slot 5</p>
                </div>
            </div>
            <div id="stagingArea" class="player">
                <div id='pCard1Error' class="playerError"></div>
                <div id='pCard1' class="drop-zone">
                    <p>Player Slot 1</p>
                </div>
                <div id='pCard2Error' class="playerError"></div>
                <div id='pCard2' class="drop-zone">
                    <p>Player Slot 2</p>
                </div>
                <div id='pCard3Error' class="playerError"></div>
                <div id='pCard3' class="drop-zone">
                    <p>Player Slot 3</p>
                </div>
                <div id='pCard4Error' class="playerError"></div>
                <div id='pCard4' class="drop-zone">
                    <p>Player Slot 4</p>
                </div>
                <div id='pCard5Error' class="playerError"></div>
                <div id='pCard5' class="drop-zone">
                    <p>Player Slot 5</p>
                </div>
            </div>
        </div>
        <div id="discard-pile" class="card-container">
            <div class="opponent-discards">
                <div id="opponentDiscardArea" class="discard-area">
                    <p>Opponent Discards</p>
                </div>
            </div>
            <div class="player-discards">
                <div id="playerDiscardArea" class="discard-area">
                    <p>Player Discards</p>
                </div>
            </div>
        </div>
    </div>

    <div class="player-container">
        <div class="health-orb player-health">
            <span id="playerHealth">100</span> <!-- Placeholder for player health -->
        </div>
        <br>
        <div id="hand" class="card-container"></div>

    </div>
    {{!-- TODO : reformat game location variables below --}}
    <div id="deck-count">
        Remaining Deck Cards: {{remainingDeckCards}}
    </div>
    <div id="opponentDeckCount">
        Remaining Opponent Deck Cards: {{remainingDeckCards}}
    </div>
    <div id="playerMana">Player Mana: {{playerMana}} </div>
    <div>Opponent Mana: {{opponentMana}} </div>
    <button id="endTurnButton">End Turn</button>
    <!-- Add other controls as needed -->
    <script src="/public/gamePlay1Helper.js"></script>
</body>

</html>