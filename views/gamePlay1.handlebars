<!-- game.html -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Card Game</title>
    <link rel="stylesheet" href="../public/gamePlay1.css">
    <link rel="stylesheet" href="/global.css">
</head>
</head>

<body>
    <h1>Card Game</h1>
    <div id="board" class="board">
        <div class="computer">
            <div class="drop-zone">
                <p>Computer Card Slot 1</p>
            </div>
            <div class="drop-zone">
                <p>Computer Card Slot 2</p>
            </div>
            <div class="drop-zone">
                <p>Computer Card Slot 3</p>
            </div>
            <div class="drop-zone">
                <p>Computer Card Slot 4</p>
            </div>
            <div class="drop-zone">
                <p>Computer Card Slot 5</p>
            </div>
        </div>
        <div class="player">
            <div id='pCard1Error' class="playerError"></div>
            <div id='pCard1' class="drop-zone">
                <p>Player Card Slot 1</p>
            </div>
            <div id='pCard2Error' class="playerError"></div>
            <div id='pCard2' class="drop-zone">
                <p>Player Card Slot 2</p>
            </div>
            <div id='pCard3Error' class="playerError"></div>
            <div id='pCard3' class="drop-zone">
                <p>Player Card Slot 3</p>
            </div>
            <div id='pCard4Error' class="playerError"></div>
            <div id='pCard4' class="drop-zone">
                <p>Player Card Slot 4</p>
            </div>
            <div id='pCard5Error' class="playerError"></div>
            <div id='pCard5' class="drop-zone">
                <p>Player Card Slot 5</p>
            </div>
        </div>
    </div>

    <div id="hand" class="card-container">
        {{#each hand}}
        {{!-- TODO change card div when possible --}}
        <div draggable="true" id="{{this.id}}" class="card">{{this.name}} {{this.type}} 
            mana: {{this.mana}}</div>
        {{/each}}
    </div>
    {{!-- TODO : reformat game location variables below --}}
    <div>
        Remaining Deck Cards: {{remainingDeckCards}}
    </div>
    <div id="playerMana">Player Mana: {{playerMana}} </div>
    <div>Opponent Mana: {{opponentMana}} </div>
    <button id="endTurnButton">End Turn</button>
    <!-- Add other controls as needed -->
    <script src="/public/gamePlay1Helper.js"></script>
</body>

</html>