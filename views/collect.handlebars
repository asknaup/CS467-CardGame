    <h2 id="collectionTitle">Collections</h2>
    <div id="collectionForms">
        <form action="/collect" method="get" id="cardForm">
            <h3 id="goToCollectionTitle"> Go to this Collection </h3>
            <select name="collectId" id="collectId">
                {{#each collect}}
                    <option value="{{this.collectionId}}">{{this.collectionName}}</option>
                {{/each}}
            </select>
        </form>
        <form action="/userProfile" method="get" id="new">
            <h3 id="goToUserProfileTitle">Go To User Profile</h3>
            <button type="submit" id="goToUserProfileButton">Create Collection</button>
        </form>
    </div>
    <a href></a>
    <div id="collection">
        <button type="button" id="collectionScrollLeft"> &lt; </button>
        <button type="button" id="collectionScrollRight"> &gt; </button>
        <h2 id="collectionLoadingTitle"> Loading...</h2>
        <div  id="collectionContainer"></div>
    </div>

    <script src="/sharedCardCode.js"></script>
    <script src="/collectionHelper.js"></script>
</body>